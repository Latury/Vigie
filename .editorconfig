# ==========================================================
# VIGIE - Configuration globale éditeur
# Mode : Strict-Progressif
# Objectif : Discipline forte sans blocage excessif
# ==========================================================

root = true

# ----------------------------------------------------------
# Tous les fichiers
# ----------------------------------------------------------

[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# ----------------------------------------------------------
# C# - Structure générale
# ----------------------------------------------------------

[*.cs]

dotnet_sort_system_directives_first = true
dotnet_separate_import_directive_groups = true

csharp_new_line_before_open_brace = all
csharp_indent_block_contents = true
csharp_indent_braces = false

# Accolades obligatoires (sécurité logique)
csharp_prefer_braces = true:error

# Interdire var généralisé (lisibilité long terme)
csharp_style_var_for_built_in_types = false:silent
csharp_style_var_when_type_is_apparent = false:silent
csharp_style_var_elsewhere = false:silent

# Préférer initialisations propres
dotnet_style_object_initializer = true:suggestion
dotnet_style_collection_initializer = true:suggestion

# Qualification explicite déconseillée sauf nécessaire
dotnet_style_qualification_for_field = false:suggestion
dotnet_style_qualification_for_property = false:suggestion
dotnet_style_qualification_for_method = false:suggestion
dotnet_style_qualification_for_event = false:suggestion

# Propriétés auto si possible
dotnet_style_prefer_auto_properties = true:suggestion

# Pas d'expression-bodied excessive (lisibilité prioritaire)
dotnet_style_prefer_expression_bodied_methods = false:suggestion
dotnet_style_prefer_expression_bodied_properties = false:suggestion

# ----------------------------------------------------------
# Nullabilité et robustesse
# ----------------------------------------------------------

dotnet_diagnostic.CS8600.severity = warning
dotnet_diagnostic.CS8602.severity = warning
dotnet_diagnostic.CS8603.severity = warning
dotnet_diagnostic.CS8618.severity = warning

# Comparaisons null explicites
dotnet_style_coalesce_expression = true:suggestion
dotnet_style_prefer_null_propagation = true:suggestion

# ----------------------------------------------------------
# Analyseurs qualité de base
# ----------------------------------------------------------

dotnet_diagnostic.IDE0005.severity = warning   # using inutile
dotnet_diagnostic.IDE0060.severity = suggestion # paramètre inutilisé
dotnet_diagnostic.IDE0051.severity = suggestion # membre privé inutilisé
dotnet_diagnostic.IDE0044.severity = suggestion # champ readonly
dotnet_diagnostic.IDE0052.severity = suggestion # membre privé non utilisé

# ----------------------------------------------------------
# Convention nommage (cohérence Vigie)
# ----------------------------------------------------------

dotnet_naming_rule.private_fields_should_be_camel_case.severity = suggestion
dotnet_naming_rule.private_fields_should_be_camel_case.symbols = private_fields
dotnet_naming_rule.private_fields_should_be_camel_case.style = camel_case_underscore

dotnet_naming_symbols.private_fields.applicable_kinds = field
dotnet_naming_symbols.private_fields.applicable_accessibilities = private

dotnet_naming_style.camel_case_underscore.capitalization = camel_case
dotnet_naming_style.camel_case_underscore.required_prefix = _

# ----------------------------------------------------------
# XAML / XML
# ----------------------------------------------------------

[*.{xaml,xml}]
indent_size = 4

# ----------------------------------------------------------
# JSON
# ----------------------------------------------------------

[*.json]
indent_size = 2

# ----------------------------------------------------------
# Markdown
# ----------------------------------------------------------

[*.md]
trim_trailing_whitespace = false

# ----------------------------------------------------------
# YAML
# ----------------------------------------------------------

[*.{yml,yaml}]
indent_size = 2
