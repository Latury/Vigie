<Application
    x:Class="Vigie.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="using:Vigie.Infrastructure"
    xmlns:local="using:Vigie">

    <!--
        Section des ressources globales de l’application.
        
        Tout ce qui est défini ici peut être utilisé
        dans n’importe quelle vue de l’application.
        
        Exemple futur :
        - Couleurs personnalisées
        - Styles globaux
        - Templates réutilisables
    -->
    <Application.Resources>

        <ResourceDictionary>

            <!--
                Dictionnaires fusionnés.
                
                Ici on charge les ressources WinUI 3 par défaut.
                Cela inclut :
                - Styles de base
                - Composants modernes
                - Thème Fluent
            -->
            <ResourceDictionary.MergedDictionaries>

                <!--  Ressources natives WinUI 3  -->
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />

                <!--
                    D’autres dictionnaires personnalisés pourront être ajoutés ici
                    lorsque l’on créera :
                    - Un fichier Styles.xaml
                    - Une palette de couleurs
                    - Un thème personnalisé
                -->

            </ResourceDictionary.MergedDictionaries>

            <!--
                Converters globaux utilisés pour :
                - Afficher ou masquer des éléments selon un booléen
                - Inverser un booléen pour gestion d'affichage conditionnel
                
                Utilisés notamment pour :
                - Affichage du ProgressRing pendant le scan
                - Masquage de l’icône lorsque l’analyse est en cours
            -->
            <conv:ConvertisseurBooleenVersVisibilite x:Key="ConvertisseurBooleenVersVisibilite" />
            <conv:ConvertisseurBooleenInverse x:Key="ConvertisseurBooleenInverse" />

            <!--
                Zone réservée aux ressources globales personnalisées.

                Exemple futur :
                <Color x:Key="CouleurPrincipale">#0078D4</Color>
            -->

        </ResourceDictionary>

    </Application.Resources>

</Application>