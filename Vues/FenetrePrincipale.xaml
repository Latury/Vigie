<Window
    x:Class="Vigie.FenetrePrincipale"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Vigie"
    mc:Ignorable="d">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Barre latérale  -->
        <Grid Grid.Column="0" Background="#384454">

            <Grid.Resources>

                <Style x:Key="NavButtonStyle" TargetType="Button">
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="BorderThickness" Value="0" />
                    <Setter Property="HorizontalAlignment" Value="Stretch" />
                    <Setter Property="Height" Value="44" />
                    <Setter Property="Margin" Value="20,0" />
                    <Setter Property="HorizontalContentAlignment" Value="Left" />
                    <Setter Property="Padding" Value="12,0" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Grid x:Name="RootGrid" Background="Transparent">
                                    <ContentPresenter Margin="12,0" VerticalAlignment="Center" />

                                    <VisualStateManager.VisualStateGroups>

                                        <VisualStateGroup x:Name="CommonStates">

                                            <VisualState x:Name="Normal" />

                                            <VisualState x:Name="PointerOver">
                                                <Storyboard>
                                                    <ColorAnimation
                                                        Storyboard.TargetName="RootGrid"
                                                        Storyboard.TargetProperty="(Grid.Background).(SolidColorBrush.Color)"
                                                        To="#4F6D8C"
                                                        Duration="0" />
                                                </Storyboard>
                                            </VisualState>

                                            <VisualState x:Name="Pressed">
                                                <Storyboard>
                                                    <ColorAnimation
                                                        Storyboard.TargetName="RootGrid"
                                                        Storyboard.TargetProperty="(Grid.Background).(SolidColorBrush.Color)"
                                                        To="#2F3B4A"
                                                        Duration="0" />
                                                </Storyboard>
                                            </VisualState>

                                        </VisualStateGroup>

                                    </VisualStateManager.VisualStateGroups>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>

            </Grid.Resources>

            <StackPanel
                Margin="0,40,0,0"
                VerticalAlignment="Top"
                Spacing="12">

                <Button
                    Click="Accueil_Click"
                    Content="Accueil"
                    Style="{StaticResource NavButtonStyle}" />

                <Button
                    Click="Historique_Click"
                    Content="Historique"
                    Style="{StaticResource NavButtonStyle}" />

                <Button
                    Click="Parametres_Click"
                    Content="Paramètres"
                    Style="{StaticResource NavButtonStyle}" />

                <Button
                    Click="APropos_Click"
                    Content="À propos"
                    Style="{StaticResource NavButtonStyle}" />

            </StackPanel>

        </Grid>

        <!--  Zone d'affichage des pages  -->
        <Frame x:Name="RootFrame" Grid.Column="1" />

    </Grid>
</Window>